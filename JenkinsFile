pipeline {
    agent any

    tools {
        maven "maven"
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[url: 'https://github.com/ahmadmdnehal/jenkins-war-deploy-1']]
                )
            }
        }

        stage('Build Maven') {
            steps {
                bat 'mvn clean install'
            }
        }
        stage('Build Docker Image'){
            steps{
                bat 'docker build -t pnw0080/jenkins-docker:1.0 .'
            }
        }
        
        stage('Push Image to Docker Hub') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'pnw0080', variable: 'dockerhubpwd')]) {
                        bat """
                            docker logout
                            docker login -u pnw0080 -p %dockerhubpwd%
                        """
                    }
                    bat "docker push pnw0080/jenkins-docker:1.0"
                }
            }
        }
    }
}
